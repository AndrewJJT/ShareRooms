
@{
    Layout = null;
}

<!DOCTYPE html>
   

<html>

<head>
    <style type="text/css">
        .h1 {
            color: #111;
            font-family: 'Helvetica Neue', sans-serif;
            font-size: 105px;
            font-weight: bold;
            letter-spacing: -1px;
            line-height: 1;
            text-align: left;           
        }
        
        .form{
            position:absolute;
            bottom:100px;
                   
        }
        .bs-example {
            height: 120px;
            position: absolute;
            bottom: 100px;
            left:350px;
            
        }

        .centerlook {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
        }

        .error {
            padding-left: 400px;
            font-weight: bold;
            width: 1000px;
            color: red;
        }

        .loginbtn {
            padding-left: 500px;
        }
    </style>

    <meta name="viewport" content="width=device-width" />
    <title>Share Rooms</title>
</head>

<body style="height: 1000px; width: 1000px;background-image:url(../Content/images/Homepage.jpg);background-size:60%;background-position: top;background-repeat: no-repeat;">
    <div class="h1">
        Share Rooms
    </div>
    <div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="bs-example">

                <div class="form-group centerlook">
                    <h1> Login </h1>
                </div>
                <div class="form-group centerlook">
                    <label>User Name: </label> <input type="text" />
                </div>
                <div class="form-group centerlook">
                    <label>Password:</label> <input type="text" />
                </div>
                <div class="form-group centerlook">
                    <button type="button">Log In</button> <button type="button">Create New Account</button>
                </div>
                <div class="form-group centerlook">
                    <input type="text" name="Country" />
                    <input type="submit" name="btnSearch" value="Search By Country" />
                </div>
            </div>
        }
    </div>
</body>
</html>
